<!DOCTYPE HTML>
<html>
    
{{>head}}

<body id="pageBody">

{{>user-header}}

<div id="contentOuterSeparator"></div>

<div class="container">

    <div class="divPanel page-content">

      
           <div class="stepwizard">
    <div class="stepwizard-row setup-panel">
        <div class="stepwizard-step">
            <a href="#step-1"  class="btn btn-primary btn-circle">Step 1</a>
           
        </div>
        <div class="stepwizard-step">
            <a href="#step-2" class="btn btn-default btn-circle" >Step 2</a>
          
        </div>
        <div class="stepwizard-step">
            <a href="#step-3"  class="btn btn-default btn-circle" >Step 3</a>
    
        </div>
        
    </div>
</div>
<form  id="update-recipe-form" name="update-recipe-form">
    <div class="row setup-content" id="step-1">
        <div class="col-xs-9">
            <div class="col-md-12">
                <h1>Recipe Details</h1>
                <div class="form-group">
                    <label class="control-label">Recipe Name</label>
                    <input  maxlength="200" name="rname" type="text" required="required" class="form-control" value="{{recipe.name}}" />
                </div>
                <div class="form-group">
                    <label class="control-label">Cuisine</label>
                    <input maxlength="200" type="text" name="cuisine" required="required" class="form-control" value="{{recipe.cuisine}}" />
                </div>
                 <div class="form-group">
                    <label class="control-label">Description</label>
                    <input  maxlength="200" type="text" name="description" required="required" class="form-control" value="{{recipe.description}}" />
                </div>
                 <div class="form-group">
                    <label class="control-label">Servings</label>
                    <input  maxlength="200" type="text" name="servings" required="required" class="form-control" value="{{recipe.servings}}" />
                </div>
  
                 <div class="form-group">
                    <label class="control-label">Preparation Time</label>
                    <input  maxlength="200" type="text" name="ptime" required="required" class="form-control" value="{{recipe.prep_time}}" />
                </div>
                <div class="form-group">
                    <label class="control-label">Cooking Time</label>
                    <input maxlength="200" type="text" name="ctime" required="required" class="form-control" value="{{recipe.cook_time}}" />
                </div>
                
                
                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
            </div>
        </div>
    </div>
    <div class="row setup-content" id="step-2">
        <div class="col-xs-12">
                <h3> Ingredients</h3>
                 
               
    <!-- The template for adding new field -->
     <div class="control-group" id="fields">
            <div class="controls"> 
                <div class="form2"  id="add-form" >
                 
      <div class="row">
           
            <div class="voca" id="voca">
                
                  
            {{#each recipe.ingredients}}

               <div class="col-md-4">
                       <input class="form-control"  name="voca" type="text" value="{{name}}">
                       <input class="form-control"  name="vocaquant" type="text" value="{{min_q}}">
                       <input class="form-control" name="vocamain" type="text" value="{{ismain}}">
                       
                  </div>
                   {{/each}}
                  
     
                  
             </div>
              </div>    
              </div>
              
               
               
          </div>
            </div>         
                    
                   
                <button class="btn btn-default prevBtn btn-lg pull-left" type="button" >Prev</button>
                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
        </div>
    </div>
    <div class="row setup-content" id="step-3">
        <div class="col-xs-12">
            <div class="col-md-12">
                <h3> Procedure</h3>
                <div class="form-group">
                    <label class="control-label">Procedure</label>
                    <textarea maxlength="200" name="procedure" required="required" class="form-control">{{recipe.procedure}}</textarea>
                </div>
               
                <button class="btn btn-default prevBtn btn-lg pull-left" type="button" >Prev</button>
                <button class="btn btn-success btn-lg pull-right" type="submit">Update</button>
            </div>
        </div>
    </div>
 
</form>  
         
         
     </div>
  
  </div>
        <!--/End Sidebar Content -->                                
        <!--/End Main Content Area here-->                  
          
<script src="../../public/scripts/jquery.min.js" type="text/javascript"></script> 
<script src="../../public/scripts/jquery-ui.js" type="text/javascript"></script>

<script src="../../public/scripts/bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
<script src="../../public/scripts/default.js" type="text/javascript"></script>


<script src="../../public/js/addFieldDynamically.js"></script>

<script src="../../public/js/scripts.js"></script>

<script src="../../public/js/recipe.js"></script>

<script src="../../public/js/update-recipe.js"></script>




</body>
</html>
