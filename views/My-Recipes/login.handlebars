<!DOCTYPE HTML>
<html>
{{>head}}
<body id="pageBody">
	{{>header}}
	<div id="contentOuterSeparator"></div>
	<div class="container">
		<form class="auth-form" method="post">
			<div class="form-group">
				<label class="col-lg-3 control-label" for="username">User Name :</label>
				<div class="col-lg-8">
				 <input type="text" class="form-control" id="username" name="username" required="required" placeholder="User Name" value="{{username}}" style="width: 400px;">
				  </div>	
			</div>
			<div class="form-group">
				<label class="col-lg-3" for="pass">Password :</label>
				<div class="col-lg-8">
				 <input type="password" class="form-control" id="pass" name="pass" required="required" placeholder="Password"
					value="{{pass}}" style="width: 400px;">
				 </div>	
			</div>
			{{#if error }}
			<div class="form-group">
				<div class="alert alert-danger">{{ error }}</div>
			</div>
			{{/if}}
			<div class="form-group">
				<button type="submit" class="btn btn-primary btn-lg active ">login</button>
			</div>
			{{#if result }}
			<div class="form-group">
				<div class="alert alert-success">The user {{ result }} is
					logged in</div>
			</div>
			{{/if}}
		</form>
	</div>
</body>
</html>