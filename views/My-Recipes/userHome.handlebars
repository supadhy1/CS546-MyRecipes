<!DOCTYPE html>
<html lang="en">
    
{{>head}}

<body id="pageBody">

{{>user-header}}



<div id="contentOuterSeparator"></div>

<div class="container">

    <div class="divPanel page-content">

     
      
      <!--Edit Sidebar Content here-->
                <div class="span2">                    
                  <div class="profile-sidebar">
        <!-- SIDEBAR USERPIC -->
        <div class="profile-userpic">
          <img src="../public/images/user_image/default.jpg" id="profile-img" class="img-responsive" alt="">
        </div>
        <!-- END SIDEBAR USERPIC -->
        <!-- SIDEBAR USER TITLE -->
        <div class="profile-usertitle">
          <label class="profile-usertitle-name"  id="uName">{{user.username}}</label>
          
        </div>
        <!-- END SIDEBAR USER TITLE -->
        <!-- SIDEBAR BUTTONS -->
  
        <!-- END SIDEBAR BUTTONS -->
        
              
  
          <ul class="nav nav-tabs tabs-left sideways" id="tabs">
             <li class="active"><a href="#profile-v" data-toggle="tab">About Me</a></li>
             <li><a href="#messages-v" data-toggle="tab">Edit Profile</a></li>
            <li><a href="#myrecipes" data-toggle="tab" onclick="myrecipes_click()">My Recipes</a></li>
             <li><a href="#add-recipe" data-toggle="tab">Add Recipe</a></li>
              <li><a href="#sign-out" id="signout" data-toggle="tab">Sign Out</a></li>
         
          </ul>
        </div>
        </div>

                
              
        <!--/End Sidebar Content -->                
                           
              <!--Edit Main Content Area here-->
       
       
      <!--Edit Sidebar Content here-->
      <div class="span9">
          <!-- Tab panes -->
          <div class="tab-content">
             <div class="tab-pane active in" id="profile-v">
                               
                <h1>My Profile</h1>
                <form id="aboutme-form" >

                  <ul>

                    {{#if user }}
                    <li class="list-group-item list-group-item-warning"><b>First Name :</b> {{user.firstName}}
                    </li>
                    <li class="list-group-item list-group-item-warning"><b>Last Name : </b> {{user.lastName}}
                    
                    </li>
                    <li class="list-group-item list-group-item-warning"><b>Occupation :</b> {{user.occupation}}</li>
                    <li class="list-group-item list-group-item-warning"><b>Email :</b> {{user.email}}</li>
                    <li class="list-group-item list-group-item-warning"><b>Phone : </b>{{user.contact}}</li>
                    <li class="list-group-item list-group-item-warning"><b>Street Address : </b>{{user.address.streetaddress}}</li> 
                    <li class="list-group-item list-group-item-warning"><b>State : </b>{{user.address.state}}</li>
                    <li class="list-group-item list-group-item-warning"><b>Zipcode : </b>{{user.address.zipcode}}</li>
                    {{ else }}
                    <li class="list-group-item list-group-item-warning"><b>First Name :</b> </li>
                    <li class="list-group-item list-group-item-warning"><b>Last Name :</b> </li>
                    <li class="list-group-item list-group-item-warning"><b>Occupation :</b></li>
                    <li class="list-group-item list-group-item-warning"><b>Email : </b></li>
                    <li class="list-group-item list-group-item-warning"><b>Phone : </b></li>
                    <li class="list-group-item list-group-item-warning"><b>Street Address :</b></li> 
                    <li class="list-group-item list-group-item-warning"><b>State :</b></li> 
                    <li class="list-group-item list-group-item-warning"><b>Zipcode :</b></li> 
                    
                     {{/if}}
                  </ul>

                </form>
                               
              </div>


              <div class="tab-pane" id="messages-v">
                <h1>Edit Profile</h1>

                <!-- edit form column -->
                <div class="col-md-9 personal-info">
                  

                  <form id="updateprofile-form" name="updateprofile-form" class="sa-innate-form" >
                    
                    
                    
                    <div class="form-group">
                      <label for="firstname">First name : </label> <input
                        class="form-control" name="firstname" id="firstname" type="text"
                        value="{{user.firstName}}">
                    </div>
                    <div class="form-group">
                      <label class="col-lg-3 control-label">Last Name : </label>
                      <div class="col-lg-8">
                        <input class="form-control" name="lastname" type="text"
                          value="{{user.lastName}}">
                      </div>
                    </div>
                    <div class="form-group">
                      <label class="col-lg-3 control-label">Occupation : </label>
                      <div class="col-lg-8">
                        <input class="form-control" name="occupation" type="text"
                          value="{{user.occupation}}">
                      </div>
                    </div>

                    <div class="form-group">
                      <label class="col-lg-3 control-label">Email : </label>
                      <div class="col-lg-8">
                        <input class="form-control" name="email" type="text"
                          value="{{user.email}}">
                      </div>
                    </div>


                    <div class="form-group">
                      <label class="col-lg-3 control-label">Phone : </label>
                      <div class="col-lg-8">
                        <input class="form-control" name="contact" type="text"
                          value="{{user.contact}}">
                      </div>
                    </div>

                    <div class="form-group">
                      <label class="col-lg-3 control-label">Street Address
                        : </label>
                      <div class="col-lg-8">
                        <input class="form-control" name="streetaddress" type="text"
                          value="{{user.address.streetaddress}}">
                      </div>
                    </div>

                    <div class="form-group">
                      <label class="col-lg-3 control-label">State : </label>
                      <div class="col-lg-8">
                        <input class="form-control" name="state" type="text"
                          value="{{user.address.state}}">
                      </div>
                    </div>

                    <div class="form-group">
                      <label class="col-lg-3 control-label">Zipcode : </label>
                      <div class="col-lg-8">
                        <input class="form-control" name="zipcode" type="text"
                          value="{{user.address.zipcode}}">
                      </div>
                    </div>

                    <div class="form-group">
                      <label class="col-md-3 control-label"></label>
                      <div class="col-md-8">
                        <input class="btn btn-success btn-lg active"
                          type="submit" value="Save Changes"> <span></span> <input
                          type="reset" class="btn btn-default" value="Cancel">
                      </div>
                    </div>

                  </form>
                </div>
              </div>




               
  <!--/Start Add Recipe -->          
          
  <div class="tab-pane" id="myrecipes">
      
      <div id="recipeList">
          

       </div>
      
      
      
  </div>
        <!--/End my Recipes-->    
          
        <!--/Start Add Recipe-->       
  <div class="tab-pane" id="add-recipe">
      
   <div class="stepwizard">
    <div class="stepwizard-row setup-panel">
        <div class="stepwizard-step">
            <a href="#step-1"  class="btn btn-primary btn-circle">Step 1</a>
            <p>Recipe Details</p>
        </div>
        <div class="stepwizard-step">
            <a href="#step-2"  class="btn btn-default btn-circle" >Step 2</a>
            <p>Ingredients</p>
        </div>
        <div class="stepwizard-step">
            <a href="#step-3"  class="btn btn-default btn-circle" >Step 3</a>
            <p>Procedure</p>
        </div>
         <div class="stepwizard-step">
            <a href="#step-4"  class="btn btn-default btn-circle" >Step 4</a>
            <p>Recipe Image</p>
        </div>
    </div>
</div>
<form id="add-recipe-form" name="add-recipe-form">
    <div class="row setup-content" id="step-1">
        <div class="col-xs-9">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label">Recipe Name</label>
                    <input  maxlength="100" name="rname" type="text" required="required" class="form-control" placeholder="Enter Recipe Name"  />
                </div>
                <div class="form-group">
                    <label class="control-label">Cuisine</label>
                    <input maxlength="100" type="text" name="cuisine" required="required" class="form-control" placeholder="Enter Cuisine" />
                </div>
                 <div class="form-group">
                    <label class="control-label">Description</label>
                    <input  maxlength="100" type="text" name="description" required="required" class="form-control" placeholder="Brief description of recipe"  />
                </div>
                 <div class="form-group">
                    <label class="control-label">Servings</label>
                    <input  maxlength="100" type="text" name="servings" required="required" class="form-control" placeholder="Servings"  />
                </div>
  
                 <div class="form-group">
                    <label class="control-label">Preparation Time</label>
                    <input  maxlength="100" type="text" name="ptime" required="required" class="form-control" placeholder="Enter Preparation time"  />
                </div>
                <div class="form-group">
                    <label class="control-label">Cooking Time</label>
                    <input maxlength="100" type="text" name="ctime" required="required" class="form-control" placeholder="Enter Cooking Time" />
                </div>
                
                
                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
            </div>
        </div>
    </div>
   <div class="row setup-content" id="step-2">
        <div class="col-xs-12">
                <h2> Ingredients</h2>
                 
               
    <!-- The template for adding new field -->
     <div class="control-group" id="fields">
            <div class="controls"> 
                <div class="form2"  id="add-form" >
                 
      <div class="row">
           
            <div class="voca" id="voca">
                
                    <div class="col-md-4">
                       <input class="form-control" placeholder="Name this ingredient" name="voca" type="text" value="">
                       <input class="form-control" placeholder="Quantity" name="vocaquant" type="text" value="">
                       <input class="form-control" placeholder="Main ingredient?" list="bool_list" name="vocamain">
                        <datalist id="bool_list">
                                 <option value="Yes">
                                 <option value="No">
  
                         </datalist>
                       <button type="button" class="btn btn-success btn-add">
                          <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Add more
                       </button>
                  
                     </div>
                  
              </div>
      </div>    
       </div>
            </div>         
                    
                    
                    </div>
                   
  
                <button class="btn btn-default prevBtn btn-lg pull-left" type="button" >Prev</button>
                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
           
        </div>
    </div>
    <div class="row setup-content" id="step-3">
        <div class="col-xs-12">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label">Procedure</label>
                    <textarea maxlength="200"  name="procedure" required="required" class="form-control" placeholder="Enter procedure"></textarea>
                </div>
               
                <button class="btn btn-default prevBtn btn-lg pull-left" type="button" >Prev</button>
                <button class="btn btn-primary nextBtn btn-lg pull-right" type="button" >Next</button>
            </div>
        </div>
    </div>
    <div class="row setup-content" id="step-4">
        <div class="col-xs-12">
            <div class="col-md-12">
                <div class="form-group">
                
                         <h3>Upload recipe photo...</h3>
                         <span class="btn btn-default btn-file">
                
                               <input type="file" name="imgInp" id="imgInp">
                         </span>
                    </div>
                         
                <br>
                <br>
                <button class="btn btn-default prevBtn btn-lg pull-left" type="button" >Prev</button>
                <button class="btn btn-success btn-lg pull-right" type="submit">Finish!</button>
            </div>
        </div>
    </div>
</form>  
 </div>
            
         
        <!--/End Add Recipe here-->      
          
          
   </div>    
    </div>                                
        <!--/End Main Content Area here-->                  
     </div>     
  </div>
  
              
  

<script src="../../public/scripts/jquery.min.js" type="text/javascript"></script> 
<script src="../../public/scripts/jquery-ui.js" type="text/javascript"></script>

